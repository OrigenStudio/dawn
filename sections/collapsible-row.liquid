{{ 'collapsible-row.css' | asset_url | stylesheet_tag }}
{{ 'component-accordion.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="page-width" class="custom-collapsible-row section-{{ section.id }}-padding">
  <div class="accordion">
    <details
      id="Details-{{ section.id }}"
      {% if section.settings.open_collapsible_row %}
        open
      {% endif %}
    >
      <summary id="Summary-{{ section.id }}" class="color-{{ section.settings.color_scheme }} gradient animate-arrow">
        {%- if section.settings.heading != blank -%}
          <div class="accordion__title-container">
            <h3 class="accordion__title inline-richtext h5">{{ section.settings.heading }}</h3>
          </div>
          <div class="icon-caret-container">
            {% render 'icon-caret' %}
          </div>
        {%- else -%}
          <h3>HELLO</h3>
          {% comment %} <h3 class="visually-hidden">{{ 'accessibility.collapsible_row_title' | t }}</h3> {% endcomment %}
        {% endif %}
      </summary>
      <div
        id="CollapsibleAccordion-{{ section.id }}"
        role="region"
        aria-labelledby="Summary-{{ section.id }}"
      >
        {%- if product.metafields.custom.technical_specifications.value != blank -%}
          {% assign properties = product.metafields.custom.technical_specifications.value %}
          <div class="technical_specifications__block">
            <div class="technical_specifications__wrapper">
                <div class="technical_specifications__content-item">
                    <div class="technical_specifications__content">
                        <h6 class="inline-richtext h4">{{ properties.item_title_1 }}</h6>
                    </div>
                    <div class="technical_specifications__content">{{ properties.item_description_1 | metafield_tag }}</div>  
                </div>
                <div class="technical_specifications__content-item">
                    <div class="technical_specifications__content">
                        <h6 class="inline-richtext h4">{{ properties.item_title_2 }}</h6>
                    </div>
                    <div class="technical_specifications__content">{{ properties.item_description_2 | metafield_tag }}</div>  
                </div>
                <div class="technical_specifications__content-item">
                    <div class="technical_specifications__content">
                        <h6 class="inline-richtext h4">{{ properties.item_title_3 }}</h6>
                    </div>
                    <div class="technical_specifications__content">{{ properties.item_description_3 | metafield_tag }}</div>  
                </div>
                <div class="technical_specifications__content-item">
                    <div class="technical_specifications__content">
                        <h6 class="inline-richtext h4">{{ properties.item_title_4 }}</h6>
                    </div>
                    <div class="technical_specifications__content">{{ properties.item_description_4 | metafield_tag }}</div>  
                </div>
                <div class="technical_specifications__content-item">
                    <div class="technical_specifications__content">
                        <h6 class="inline-richtext h4">{{ properties.item_title_5 }}</h6>
                    </div>
                    <div class="technical_specifications__content">{{ properties.item_description_5 | metafield_tag }}</div>  
                </div>
                <div class="technical_specifications__content-item">
                    <div class="technical_specifications__content">
                        <h6 class="inline-richtext h4">{{ properties.item_title_6 }}</h6>
                    </div>
                    <div class="technical_specifications__content">{{ properties.item_description_6 | metafield_tag }}</div>  
                </div>
                <div class="technical_specifications__content-item">
                    <div class="technical_specifications__content">
                        <h6 class="inline-richtext h4">{{ properties.item_title_7 }}</h6>
                    </div>
                    <div class="technical_specifications__content">{{ properties.item_description_7 | metafield_tag }}</div>  
                </div>
            </div>
        </div>
        {%- else -%}
          <p>There's no related technical specifications.</p>
        {%- endif -%}
      </div>
    </details>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.collapsible_product_technical_specifications.name",
  "class": "section",
  "enabled_on": {
    "templates": ["product"],
    "groups": ["aside"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "TECHNICAL SPECIFICATIONS",
      "label": "t:sections.technical_specifications"
    },
    {
      "type": "checkbox",
      "id": "open_collapsible_row",
      "default": false,
      "label": "t:sections.collapsible_row.settings.open_collapsible_row.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "t:sections.collapsible_product_technical_specifications.name"
    }
  ]
}
{% endschema %}
